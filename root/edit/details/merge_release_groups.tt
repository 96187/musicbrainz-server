<table class="details">
  <tr>
    <th>[%- ln('Old release group:', 'Old release groups:', edit.display_data.old.size) %]</th>
    <td>
      <ul>
        [% FOR release_group=edit.display_data.old %]
          <li>[% l('{release_group} by {artist}',
               { release_group => link_release_group(release_group),
                 artist => artist_credit(release_group.artist_credit)}) %]</li>
        [% END %]
      </ul>
    </td>
  </tr>

  <tr>
    <th>[% l('New release group:') %]</th>
    <td>[% l('{release_group} by {artist}',
               { release_group => link_release_group(edit.display_data.new),
                 artist => artist_credit(edit.display_data.new.artist_credit)}) %]
    </td>
  </tr>
</table>
