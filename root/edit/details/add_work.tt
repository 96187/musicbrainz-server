<table class="details">
  <tr>
    <th>[% l('Name:') %]</th>
    <td>[% edit.display_data.name %]</td>
  </tr>

  <tr>
    <th>[% l('Artist:') %]</th>
    <td>[% artist_credit(edit.display_data.artist_credit) %]</td>
  </tr>

  [% IF edit.display_data.comment %]
  <tr>
    <th>[% l('Comment:') %]</th>
    <td>[% edit.display_data.comment %]</td>
  </tr>
  [% END %]

  [% IF edit.display_data.iswc %]
  <tr>
    <th>[% l('ISWC:') %]</th>
    <td>[% edit.display_data.iswc %]</td>
  </tr>
  [% END %]

  [% IF edit.display_data.type %]
  <tr>
    <th>[% l('Type:') %]</th>
    <td>[% edit.display_data.type.name %]</td>
  </tr>
  [% END %]
</table>
